#main
  .extension-list
    %h3
      All Extensions
      %small
        = page_entries_info @extensions, {:html => false}
    %table
      %thead
        %tr
          %td{:width => "250"}
            Name
          %td{:width => "300"}
            Description
          %td{:width => "200"}
            Tags
          %td{:width => "150"}
            Author
          %td{:width => "100"}
            Stars
      %tbody
        - @extensions.each do  |e|
          %tr{:class => "id-#{e.id}"}
            %td{:class => "card-title"}
              %a{:href => "https://www.github.com/#{e.author}/#{e.project_name}", :class => "title-link"}
                = e.name
            %td{:class => "card-description"}
              = e.description
            %td.tag-list
              - e.tags.each do |tag|

                %a{:href => "/tag/#{tag}", :class => "tag", :data => {:pjax => 'true'}}
                  = tag

            %td{:class => "author"}
              %a{:href => "/user/#{e.author}", :class => "author-filter"}
                = e.author
            %td{:class => "ghub-stars"}
              = e.watchers
  = will_paginate @extensions, :previous_label => "", :next_label => ""
